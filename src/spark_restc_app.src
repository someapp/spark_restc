{application, spark_restc_srv,
 [
  {description, "Spark RestAPI consumer, as a service"},
  {vsn, "${PACKAGE_VERSION}"},
  {registered, [spark_restapi_consumer]},
  {applications, [
                  kernel,
                  stdlib,
                  crypto,
                  public_keys, 
                  ssl,
                  inets,
                  restc,
                  syntax_tools, 
				  compiler, 
		          crypto,
		          goldrush,		          
		          lager
                 ]},
  {modules, [
  	spark_restc_app,
  	spark_restc_sup,
  	spark_restc_gen_rest_req,
  	spark_restc_gen_rest_resp,
  	spark_restc_gen_handler,
  	spark_restc_log_handler
  ]},
  {mod, { spark_restc_app, []}},
  {env, [
 	  {conf_path, <<"etc">>},
  	  {conf_file, <<spark_restc.yaml>>},
  	  {use_mnesia_conf_store, false}
  ]}
 ]}.
